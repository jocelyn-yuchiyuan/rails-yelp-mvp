
<div class="container">
  <h1>Add new restaurant</h1>

    <p>What restaurant would you like to add?</p>
    <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, collection: Restaurant::CATEGORY, include_blank: false %>
      <% unless @restaurant.id %>
      <% end %>
    <%= f.submit class: 'btn btn-primary' %>
    <% end %>


</div>

